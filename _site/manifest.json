{
	"manifest_version": 2,
	"name" : "refreshAll",
	"version" : "1.0.0",
	"icons" : {
		"40" : "images/icon.png"
	},
	"browser_action" : {
	"default_icon" : "images/icon.png",
    "default_title" : "reload all the tabs"
	},
	"permissions" : [
		"activeTab",
		"tabs"
	],
	"background" : {
		"scripts" : ["event.js"],
		"persistent": false
	},
	"author" : "Diney Wankhede"
} 